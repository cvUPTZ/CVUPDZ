{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "server/server.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
